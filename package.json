{
	"name": "npm-cli-path",
	"version": "3.1.2",
	"description": "Resolve the path of `npm-cli.js` included in the globally installed npm CLI",
	"repository": "shinnn/npm-cli-path",
	"author": "Shinnosuke Watanabe (https://github.com/shinnn)",
	"license": "ISC",
	"scripts": {
		"pretest": "eslint .",
		"test": "nyc --clean node tests/no-npm.js && npm run-script test-npm-run --silent && nyc report --reporter=text",
		"test-npm-run": "nyc node tests/npm-run-script.js"
	},
	"files": [
		"index.js"
	],
	"keywords": [
		"npm",
		"npm-cli",
		"cli",
		"path",
		"bin",
		"entry",
		"entry-point",
		"file",
		"find",
		"pinpoint",
		"resolve",
		"promise",
		"promises",
		"then",
		"async",
		"asynchronous",
		"asynchronously"
	],
	"dependencies": {
		"executing-npm-path": "^1.0.0",
		"which": "^1.3.1",
		"win-user-installed-npm-cli-path": "^3.0.0"
	},
	"devDependencies": {
		"@shinnn/eslint-config": "^6.7.5",
		"eslint": "^5.7.0",
		"nyc": "^13.1.0",
		"nyc-config-common": "^1.0.1",
		"tape": "^4.9.1"
	},
	"eslintConfig": {
		"extends": "@shinnn"
	},
	"nyc": {
		"extends": "nyc-config-common",
		"clean": false,
		"include": "index.js",
		"silent": true
	}
}
